<div class ="row">
  <div class="col-md-6">
    <div class="container">
      
      <h2>Burger Application</h2>
        <ul>
          {{#each burgers}}
            {{#unless ate}}
              {{> burgers/burger-block eaten=true}}
            {{/unless}}
          {{/each}}
        </ul>
        </div>
    </div>

 <div class="col-md-6">
    <div class="container">
      
      <h2>Burgers You've Eaten!</h2>
        <h6>Eaten Burgers</h6>
          <ul>
            {{#each burgers}}
              {{#if ate}}
                {{> burgers/burger-block eaten=false}}
              {{/if}}
            {{/each}}
          </ul>
          </div>
    </div>
</div>


<div class="row">
  <div class="col-md-4"></div>
   <div class="col-md-4">
<div class="order-container">
  <h2>Order A Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger_name" placeholder="Order a Burger">
      </div>

      <button type="submit">Order</button>
    </form>
    </div>
</div>
</div>